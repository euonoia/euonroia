# ---- Backend Dockerfile (Development) ----
FROM node:18-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Install nodemon globally for auto-reload
RUN npm install -g nodemon

# Copy source code
COPY . .

EXPOSE 5000

# Run backend with nodemon for live reload
CMD ["nodemon", "index.js"]
